{
  "name": "fide-embedded-dashboard",
  "displayName": "FIDE Embedded Dashboard",
  "description": "Dashboard for managing embedded development projects with board selection and log viewer",
  "version": "0.0.1",
  "publisher": "fide",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fide-embedded",
          "title": "FIDE Embedded",
          "icon": "resources/fide-icon.svg"
        }
      ]
    },
    "views": {
      "fide-embedded": [
        {
          "id": "fide.dashboardView",
          "name": "Dashboard"
        },
        {
          "id": "fide.dltViewerView",
          "name": "DLT Viewer"
        },
        {
          "id": "fide.aiAgentView",
          "name": "AI Agent"
        }
      ]
    },
    "commands": [
      {
        "command": "fide.openDashboard",
        "title": "FIDE: Open Dashboard",
        "category": "FIDE",
        "icon": "$(circuit-board)"
      },
      {
        "command": "fide.openDltViewer",
        "title": "FIDE: Open DLT Timeline Viewer",
        "category": "FIDE",
        "icon": "$(graph-line)"
      },
      {
        "command": "fide.openAiAgent",
        "title": "FIDE: Open AI Agent",
        "category": "FIDE",
        "icon": "$(hubot)"
      }
    ],
    "configuration": {
      "title": "FIDE Embedded Dashboard",
      "properties": {
        "fide.backendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Backend API URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npx esbuild src/dlt-viewer/webview.js --bundle --outfile=out/dlt-viewer/webview.js --format=iife --platform=browser && cp src/dlt-viewer/webview.css out/dlt-viewer/webview.css && cp src/ai-agent/webview.js out/ai-agent/webview.js && cp src/ai-agent/webview.css out/ai-agent/webview.css && cp src/dashboard/webview.js out/dashboard/webview.js && cp src/dashboard/webview.css out/dashboard/webview.css",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "ws": "^8.19.0"
  }
}
